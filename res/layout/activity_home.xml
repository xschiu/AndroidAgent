    <ImageButton
        android:id="@+id/learnBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/socialize"
        android:layout_alignTop="@+id/diaryBtn"
        android:background="@drawable/learn" />

    <ImageButton
        android:id="@+id/meBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/tabla_cuerpo"
        android:layout_below="@+id/tabla_cuerpo"
        android:layout_marginTop="19dp"
        android:background="@drawable/me" />

    <ImageButton
        android:id="@+id/socialize"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/calendarBtn"
        android:layout_toRightOf="@+id/chatBtn"
        android:background="@drawable/socialize" />

    <ImageButton
        android:id="@+id/diaryBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/playBtn"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/playBtn"
        android:background="@drawable/diary" />

    <ImageButton
        android:id="@+id/calendarBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/playBtn"
        android:layout_alignLeft="@+id/diaryBtn"
        android:background="@drawable/calendar" />

    <ImageButton
        android:id="@+id/emailBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/mapBtn"
        android:layout_marginRight="28dp"
        android:layout_marginTop="33dp"
        android:layout_toLeftOf="@+id/mapBtn"
        android:background="@drawable/email" />

    <ImageButton
        android:id="@+id/mapBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/diaryBtn"
        android:layout_below="@+id/diaryBtn"
        android:layout_marginTop="58dp"
        android:background="@drawable/map" />

    <ImageButton
        android:id="@+id/playBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/meBtn"
        android:layout_below="@+id/meBtn"
        android:layout_marginTop="14dp"
        android:background="@drawable/play" />

    <ImageButton
        android:id="@+id/chatBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/emailBtn"
        android:layout_toRightOf="@+id/mapBtn"
        android:background="@drawable/chat" />

