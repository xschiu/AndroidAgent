<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/livingroom"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="Home" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp" >

        <ImageView
            android:id="@+id/weatherImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/cloudy" />

        <AnalogClock
            android:id="@+id/analogClock1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/weatherImage"
            android:layout_marginLeft="17dp" />
        
       
        <Spinner
            android:id="@+id/emotionSpinner"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/analogClock1"
            android:layout_marginLeft="13dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
>


            <ImageButton
                android:id="@+id/meBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/me" />

            <ImageButton
                android:id="@+id/socialize"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/socialize" />

            <ImageButton
                android:id="@+id/learnBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/learn" />

    </LinearLayout>

	 <TextView
            android:id="@+id/txtTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="5dp"
            android:text="28 Â°C"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <ImageButton
        android:id="@+id/mapBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/calendarBtn"
        android:layout_below="@+id/chatBtn"
        android:layout_marginLeft="14dp"
        android:background="@drawable/map" />

    <ImageButton
        android:id="@+id/emailBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/calendarBtn"
        android:layout_below="@+id/mapBtn"
        android:layout_marginLeft="14dp"
        android:background="@drawable/email" />

    <ImageButton
        android:id="@+id/playBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/play" />

    <ImageButton
        android:id="@+id/calendarBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
         android:layout_alignParentLeft="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/calendar" />

    <ImageButton
        android:id="@+id/diaryBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignRight="@+id/linearLayout2"
        android:layout_alignTop="@+id/calendarBtn"
        android:layout_marginRight="20dp"
        android:background="@drawable/diary" />

    <ImageButton
        android:id="@+id/chatBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/calendarBtn"
        android:layout_marginRight="20dp"
        android:background="@drawable/chat" />
    
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="#ffffff"
        android:layout_below="@+id/linearLayout2"
        
        
	>

        <TextView
            android:id="@+id/butlerMessageTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" 
          
            />

    </LinearLayout>

</RelativeLayout>



     