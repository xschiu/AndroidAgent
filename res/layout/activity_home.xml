<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/livingroom"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="Home" >

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="#59000000">

    
        <Button
            android:id="@+id/celcius"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:text="28Â°C" 
            android:gravity="bottom"
            android:textColor="@drawable/white"
            android:background="@drawable/cloudy"
            />
        
        <ImageView
	        android:id="@+id/gridSpinner"
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:layout_toRightOf="@+id/analogClock1"
	        android:layout_marginLeft="58dp"
	        android:background="@drawable/moodicon3" />
       

        <AnalogClock
            android:id="@+id/analogClock1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

	 <ImageButton
		android:id="@+id/meBtn"
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="270dp"                
		android:background="@drawable/me" />
    
    <ImageButton
        android:id="@+id/mapBtn"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignLeft="@+id/calendarBtn"
        android:layout_below="@+id/chatBtn"
        android:layout_marginLeft="14dp"
        android:background="@drawable/map" />

    <ImageButton
        android:id="@+id/emailBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/calendarBtn"
        android:layout_below="@+id/mapBtn"
        android:layout_marginLeft="14dp"
        android:background="@drawable/email" />

    

    <ImageButton
        android:id="@+id/calendarBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/calendar" />

    <ImageButton
        android:id="@+id/chatBtn"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/calendarBtn"
        android:layout_marginRight="20dp"
        android:background="@drawable/chat" />
    
    <RelativeLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="#ffffff"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/butlerMessageTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" 
            android:layout_marginBottom = "10dp"
            android:gravity="top"
        />
        
       
        

        
    </RelativeLayout>




    <TextView
        android:id="@+id/todayDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout1"
        android:layout_alignLeft="@+id/meBtn"
        android:textColor="@drawable/white"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/socialize"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/calendarBtn"
        android:layout_alignTop="@+id/learnBtn"
        android:background="@drawable/socialize" />

    <ImageButton
        android:id="@+id/playFunctionBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/meBtn"
        android:layout_alignTop="@+id/socialize"
        android:background="@drawable/play" />

    <ImageButton
        android:id="@+id/learnBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/diaryBtn"
        android:layout_alignRight="@+id/linearLayout1"
        android:layout_marginBottom="32dp"
        android:background="@drawable/learn" />

    <ImageButton
        android:id="@+id/diaryBtn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignRight="@+id/learnBtn"
        android:layout_alignTop="@+id/calendarBtn"
        android:background="@drawable/functionmemory" />

</RelativeLayout>
