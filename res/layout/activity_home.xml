        android:background="@drawable/dancesport" />

    <ImageButton
        android:id="@+id/emailBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/mapBtn"
        android:layout_below="@+id/chatBtn"
        android:layout_marginTop="29dp"
        android:background="@drawable/email" />
    
    <ImageButton
        android:id="@+id/calendarBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/chatBtn"
        android:layout_alignTop="@+id/emailBtn"
        android:background="@drawable/calendar" />

    <ImageButton
        android:id="@+id/notificationBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/tutorialBtn"
        android:layout_below="@+id/tutorialBtn"
        android:layout_marginTop="29dp"
        android:background="@drawable/notification" />

    <ImageButton
        android:id="@+id/mapBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/tabla_cuerpo"
        android:layout_below="@+id/tabla_cuerpo"
        android:layout_marginTop="40dp"
        android:background="@drawable/map" />

