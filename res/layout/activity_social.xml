<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Social" >

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:columnCount="2"
        android:rowCount="2">

        <Button
            android:id="@+id/facebookBtn"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:background="#00000000"
            android:text="FaceBook"
            android:drawableTop="@drawable/facebook"
            android:onClick="facebook" />

        <Button
            android:id="@+id/instaBtn"
            android:layout_column="1"
            android:layout_gravity="right|top"
            android:layout_row="0"
            android:background="#00000000"
            android:text="Instagram"
            android:drawableTop="@drawable/insta"
            android:onClick="insta" />

        <Button
            android:id="@+id/twitterBtn"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:background="#00000000"
            android:text="Twitter"
            android:drawableTop="@drawable/twitter"
            android:layout_marginTop="50dp"
            android:onClick="twitter" />

        <Button
            android:id="@+id/linkedinBtn"
            android:layout_column="1"
            android:background="#00000000"
            android:layout_gravity="right|top"
            android:layout_row="1"
            android:text="LinkedIn"
            android:drawableTop="@drawable/linkedin"
            android:layout_marginTop="50dp"
            android:onClick="linkedin"  />
        
    </GridLayout>

</RelativeLayout>