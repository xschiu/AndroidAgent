<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Chat" >
    android:prompt="@string/prompt"

    <TextView
        android:id="@+id/emotion_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/android1"
        android:layout_alignTop="@+id/sendBtn"
        android:layout_marginRight="39dp" />

    <TextView
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/android1"
        android:layout_alignTop="@+id/spinner1"
        android:text="Get movement input"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/android1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:src="@drawable/android1" />

    <EditText
        android:id="@+id/taskTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/android1"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Ask Whatever you want" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/taskTxt"
        android:layout_centerHorizontal="true"
        android:text="Send" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/emotion_icon"
        android:layout_marginTop="42dp" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/action"
        android:layout_alignBottom="@+id/action"
        android:layout_alignLeft="@+id/sendBtn"
        android:text="Get Location"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>